{
  "name": "mirascope-website",
  "private": true,
  "scripts": {
    "start": "node scripts/start.js",
    "dev": "bun --bun vite",
    "preprocess-content": "bun run scripts/preprocess-content.ts",
    "fetch-github-stats": "bun run --bun scripts/fetch-github-stats.ts",
    "enumerate-routes": "bun run scripts/enumerate-routes.ts",
    "generate-social": "bun scripts/generate-socials/main.ts",
    "test-prerender-route": "bun run scripts/test-prerender.ts",
    "prerender": "bun run scripts/vite-prerender.ts",
    "prebuild": "bun run preprocess-content && bun run generate-social --build-html",
    "build": "bun run --bun vite build && bun run prerender",
    "serve": "bun scripts/serve-static.js",
    "test": "bun test",
    "lint": "bun run typecheck && bun run lint:mdx && bun run lint:snippets && bun run lint:format && bun run lint:social",
    "lint:social": "bun run generate-social --check",
    "typecheck": "bun run tsc --noEmit",
    "lint:mdx": "bun run scripts/validate-mdx.ts",
    "lint:snippets": "bun run scripts/update-snippets.ts --check",
    "lint:py-snippets": "./scripts/lint-python.sh",
    "lint:format": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,mdx}\"",
    "fix": "bun run fix:format && bun run fix:snippets",
    "fix:format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,mdx}\"",
    "fix:snippets": "bun run scripts/update-snippets.ts",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md,mdx}": "prettier --write",
    "*.{ts,tsx}": [
      "node scripts/check-ts.js"
    ],
    "*.mdx": [
      "bun run lint:mdx",
      "bun run lint:snippets"
    ],
    "*.py": "./scripts/lint-python.sh --path"
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-navigation-menu": "^1.2.5",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-router": "^1.114.3",
    "@tanstack/react-router-devtools": "^1.114.3",
    "@tanstack/router-plugin": "^1.114.3",
    "@types/react-helmet": "^6.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.476.0",
    "mermaid": "^11.6.0",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet": "^6.1.0",
    "rehype-pretty-code": "^0.14.1",
    "shiki": "^3.2.1",
    "shikiji": "^0.10.2",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^17.4.4",
    "@shikijs/transformers": "^3.2.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.14.0",
    "@types/puppeteer": "^7.0.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "bun-types": "^1.2.9",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "puppeteer": "^24.6.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.2",
    "vite": "^6.1.0",
    "web-vitals": "^4.2.4"
  }
}
