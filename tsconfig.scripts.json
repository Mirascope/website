{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": false,
    "types": ["node"],
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["scripts/**/*.ts"]
}
